<% include ./partials/header %>
<link href="https://getbootstrap.com/docs/4.2/examples/album/album.css" rel="stylesheet">
<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">DHIKR GROUPS</h1>
            <p class="lead text-muted">Something short and leading about the collection below—its contents, the
                creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
            <p>
                <a href="#" class="btn btn-primary my-2">Update Count</a>
                <a href="/group/create" class="btn btn-secondary my-2">Create a new group</a>
            </p>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                <% groups.forEach(group => {%>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="https://i.pinimg.com/originals/47/72/a8/4772a8c63022d0a6044f49c6527eac6b.jpg"
                            alt="">
                        <div class="card-body">
                            <p class="card-text">
                                <%= group.name %>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/group/<%= group._id %>" class="btn btn-sm btn-outline-secondary">View</a>
                                    <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
                                </div>
                                <small class="text-muted"><%= moment(group.createdAt).fromNow() %></small>
                            </div>
                        </div>
                    </div>
                </div>
                <% })%>

            </div>
        </div>
    </div>

</main>

<% include ./partials/footer %>